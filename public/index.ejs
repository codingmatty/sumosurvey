<!DOCTYPE html>
<html>

<head>
  <title>Sumo Survey</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
  <link rel="stylesheet" href="/lib/bootstrap.min.css">
  <link rel="stylesheet" href="/css/app.css">
  <base href="/">
</head>

<body ng-app="SumoSurvey">
  <nav class="navbar navbar-default" ng-controller="NavController as navVm">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        <a class="navbar-brand" href="/">Sumo Survey</a>
      </div>
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <li ng-show="!navVm.AdminLoggedIn()">
            <a href="#" ng-click="navVm.AdminLogIn()">Admin Login</a>
          </li>
          <li ng-show="navVm.AdminLoggedIn()" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li>
                <a href="/admin/form">New Survey Question</a>
              </li>
              <li>
                <a href="/admin/list">List Surveys</a>
              </li>
              <li role="separator" class="divider"></li>
              <li>
                <a href="/" ng-click="navVm.AdminLogOut()">Logout</a>
              </li>
            </ul>
          </li>
        </ul>
      </div>
      <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
  </nav>
  <ng-view class="container"></ng-view>

  <hr />
  <footer class="text-center">
    <section class="copyright">Matthew Jacobs &copy; 2017</section>
    <section class="github">Submit issues on <a href="https://github.com/mattjdev/sumosurvey/issues">Github</a></section>
  </footer>

  <!-- Library Scripts -->
  <script src="/lib/jquery-2.1.4.min.js"></script>
  <script src="/lib/bootstrap.min.js"></script>
  <script src="/lib/lodash.min.js"></script>
  <script src="/lib/angular.js"></script>
  <script src="/lib/angular-cookies.min.js"></script>
  <script src="/lib/angular-route.min.js"></script>
  <script src="/lib/angular-touch.min.js"></script>
  <script src="/lib/restangular.min.js"></script>

  <!-- App Scripts -->
  <script src="/js/app.js"></script>
  <script src="/js/services/admin.service.js"></script>
  <script src="/js/services/option.service.js"></script>
  <script src="/js/services/survey.service.js"></script>
  <script src="/js/controllers/nav.controller.js"></script>
  <script src="/js/controllers/admin.controller.js"></script>
  <script src="/js/controllers/login.controller.js"></script>
  <script src="/js/controllers/form.controller.js"></script>
  <script src="/js/controllers/survey.controller.js"></script>
</body>

</html>
